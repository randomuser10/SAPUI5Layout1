<mvc:View controllerName="emplayout.emplayout.controller.Employee"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:layout="sap.ui.layout">
    <Page id="page" title="Employee Details" titleAlignment="Center">
        <content>
        <!-- Employee Detais -->
            <Panel id="idPEmpdet" headerText="Employee Details" expandable="true" expanded="true">
                <layout:Grid id="Grid1" defaultSpan="XL6 L6 M6 S12" vSpacing="0">
                    <Label id="idLabelEid" text="Employee Id" class = "sapUiTinyMarginTop"></Label>
                    <Input id="idIpEid"  class = "sapUiTinyMarginTop"></Input>
                    <Label id="idLabelEname" text="Employee Name" class = "sapUiTinyMarginTop"></Label>
                    <Input id="idIpEname" class = "sapUiTinyMarginTop"></Input>
                    <Label id="idLabelEDes" text="Employee Designation" class = "sapUiTinyMarginTop"></Label>
                    <Input id="idIpEDesi" class = "sapUiTinyMarginTop"></Input>
                    <Label id="idLabelESkill" text="Employee Skills" class = "sapUiTinyMarginTop"></Label>
                    <Input id="idIpESkill" class = "sapUiTinyMarginTop"></Input>
                    <Label id="idLabelEmail" text="Employee Email" class = "sapUiTinyMarginTop"></Label>
                    <Input id="idIpEmail" class = "sapUiTinyMarginTop"></Input>                    
                </layout:Grid>
                <!-- Employee Personal Details -->
            </Panel>
            <Panel id="idPPerDet" headerText="Personal Details" expandable="true">
                <layout:Grid id="idGFamDet" defaultSpan="XL3 L3 M6 S12" vSpacing="0">
                    <Label id="idLEName" text="Employee Name" class = "sapUiTinyMarginTop"></Label>
                    <Input id="idIpEName" class= "sapUiTinyMarginTop"></Input>
                    <Label id="idLEAdd" text="Employee Address" class= "sapUiTinyMarginTop"></Label>
                    <Input id="idIpEAdd" class= "sapUiTinyMarginTop"></Input>
                    <Label id="idLEDob" text="Date of Birth" class= "sapUiTinyMarginTop"></Label>
                    <Input id="idIpEDob" class= "sapUiTinyMarginTop"></Input>
                </layout:Grid>
            </Panel>
            <Panel id="idPOther" headerText="Other Details">
                <layout:Grid id="idGrid3" vSpacing="0">
                    <Label id="idLEdu" text="Education Details" class= "sapUiTinyMarginTop">
                        <layoutData>
                            <layout:GridData id="idG1" span="XL3 L3 M6 S12">
                            </layout:GridData>
                        </layoutData>
                    </Label>
                    <Input id="idIpEdu" class= "sapUiTinyMarginTop">
                        <layoutData>
                            <layout:GridData id="idG2" span="XL9 L9 M9 S12">
                            </layout:GridData>                    
                        </layoutData>
                    </Input>
                    <Label id="idLPComp" text="Previous Company">
                        <layoutData>
                            <layout:GridData id="idGridL2" span="XL3 L3 M3 S12"></layout:GridData>
                        </layoutData>
                    </Label>
                    <Input id="idIpPComp" class= "sapUiTinyMarginTop">
                        <layoutData>
                            <layout:GridData id="idGridI2" span="XL3 L3 M3 S12">
                            </layout:GridData>                    
                        </layoutData>
                    </Input>
                    <Label id="idLDesig" text="Designation" class= "sapUiTinyMarginTop">
                        <layoutData>
                            <layout:GridData id="idLGrid1" span="XL3 L3 M3 S12"></layout:GridData>
                        </layoutData>
                    </Label>
                    <Input id="idIpDesig" class="sapUiTinyMarginTop">
                        <layoutData>
                            <layout:GridData id="idIGrid1" span="XL3 L3 M3 S12"></layout:GridData>
                        </layoutData>
                    </Input>
                    
                </layout:Grid>
            </Panel>
        </content>
    </Page>
</mvc:View>